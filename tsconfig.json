{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./out/",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "removeComments": true,
        "paths": {
            "~/*": ["./src/*"],
            "~/api": ["./src/api/mod"]
        }
    },

    "exclude": [
        "./demo/", 
        "./out/", 
        "./dist/"
    ]
}
